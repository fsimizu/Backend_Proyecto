<div class="home__container">
    <div class="recovery__form-container">
        <h3 class="home__title">Change your password</h3>
        <form action="/auth/pass-change" method="post">
            <hr>
            <p>Enter a new password for {{email}}</p>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                    required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password2" name="password2"
                    placeholder="Confirm password" required>
            </div>
            
            <div class="form-group" style="display: none">
                <input type="text" class="form-control" id="email" name="email" value="{{email}}">
            </div>

            <button type="submit" class="btn btn-primary">Reset password</button>
        </form>
        <br>
        <a href="/"><button class="btn btn-secondary">Back to login</button></a>
    </div>
</div>