<h1>New account</h1>
<div class="home__container">
    <div class="home__form-container">
        {{!-- <form action="/api/sessions/register" method="post"> --}}
        <form action="/auth/register" method="post">
            <div class="form-group">
                <label for="registerEmail">Email address</label>
                <input type="email" class="form-control" id="registerEmail" name="email"
                    aria-describedby="emailHelp" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label for="registerName">Name</label>
                <input type="text" class="form-control" id="registerName" name="firstName"
                    aria-describedby="emailHelp" placeholder="Name" required>
            </div>
            <div class="form-group">
                <label for="registerLastName">Last Name</label>
                <input type="text" class="form-control" id="registerLastName" name="lastName"
                    aria-describedby="emailHelp" placeholder="Last name" required>
            </div>

            <div class="form-group">
                <label for="registerPass">Password</label>
                <input type="password" class="form-control" id="registerPass" name="password"
                    placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        
        <hr>
        <form action="/" method="get">
            <p>Already have an account?</p>
            <button type="submit" class="btn btn-secondary">Sign in</button>
        </form>
    </div>
</div>