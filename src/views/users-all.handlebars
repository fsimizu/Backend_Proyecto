                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="p-5">
                                <h1 class="fw-bold mb-0 text-black">All users</h1>
<br>
                                <table id="example" class="table table-striped table-bordered" cellspacing="0"
                                    width="100%">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                            <th>Verified</th>
                                            <th>Last connection</th>
                                            <th>Edit/delete</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        {{#each users}}
                                        <tr>
                                            <td>{{this.firstName}} {{this.lastName}}</td>
                                            <td>{{this.email}}</td>
                                            <td>{{this.role}}</td>
                                            <td></td>
                                            <td>{{this.lastConnection}}</td>
                                            <td style="text-align: center">
                                                <a href="users/{{this._id}}" style="color: inherit;"><i class="fa fa-edit"></i></a> 
                                                <a onclick="removeUser('{{this._id}}')" style="color: inherit; cursor:pointer"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                        {{/each}}

                                    {{!-- Pending pagination --}}
                                    </tbody>
                                </table>





                            </div>
                        </div>
