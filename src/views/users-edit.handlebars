<div class="home__container">
    <div class="home__form-container">
        <h3 class="home__title">My profile</h3>
        <form action="/products/edit/" method="post">
            <div class="form-group">
                <label for="registerEmail">First name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First name" required value="{{user.firstName}}">
            </div>
            <div class="form-group">
                <label for="registerName">Last name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last name"
                    required value="{{user.lastName}}">
            </div>
            <div class="form-group">
                <label for="registerLastName">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="Email" required value="{{user.email}}" disabled>
            </div>

            <div class="form-group">
                <label for="registerLastName">Password</label>
                <a href="/pass-recovery" class="btn-reset">Reset</a>
                <input type="password" class="form-control" id="password" name="password" required value="1234567890" disabled>
            </div>

            <div class="form-group">
                <label for="registerLastName">Last connection</label>
                <input type="text" class="form-control" id="lastConnection" name="lastConnection" disabled value="{{user.lastConnection}}">
            </div>

            <div class="form-group">
                <label for="registerLastName">Documents</label>
                <input type="file" class="form-control" id="documents" name="documents" placeholder="Documents" multiple>
            </div>

            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
        <br>
        <a href="/users"><button class="btn btn-secondary">Go back</button></a>
    </div>
</div>

